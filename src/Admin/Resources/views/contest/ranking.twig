{% extends "admin_base.twig" %}

{% block content %}

    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Ranking</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Participante</th>
                            <th>Total Votos</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for r in ranking %}
                                <tr>
                                    <td>{{ r.name }}</td>
                                    <td>{{ r.total_votes }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block scripts %}


{% endblock %}